
@{
    ViewData["Title"] = "Danh Sách Tài Khoản";
    Layout = "~/Views/Shared/Page_Home.cshtml";
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh Sách Tài Khoản Nhân Viên</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Trang Chủ</a></li>
                <li class="breadcrumb-item active">Danh Sách Tài Khoản</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-4">
                        <input id="TxtSeach" onchange="F_SeachCity()" style="margin: 10px 0px;" type="text" class="form-control" placeholder="Nhập Vào Tên, Email Nhân Viên..." />
                    </div>

                    <p>
                        <a class="btn btn-primary" asp-action="PageCreateAccount" asp-controller="Account" data-bs-toggle="tooltip" data-bs-placement="top" title="Thêm Mới">
                            <i class="fas fa-plus-square"></i>
                        </a>
                        <a class="btn btn-primary" asp-action="PageStaffOrChef" asp-controller="Account" data-bs-toggle="tooltip" data-bs-placement="top" title="Nhân Viên Đầu Bếp">
                            <i class="fas fa-users-cog"></i>
                        </a>
                        <a class="btn btn-primary" onclick="ReloadPage()" data-bs-toggle="tooltip" data-bs-placement="top" title="Tải Lại Trang">
                            <i class="fas fa-sync-alt"></i>
                        </a>
                    </p>
                    <p style="text-align:right; font-size:16px; font-family: initial">
                        Tổng Số: <b style="color: red;" id="TotalAccount"></b>
                    </p>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">STT <i class="fas fa-sort" onclick="SortId()"></i> </th>
                                    <th scope="col">Tên Nhân Viên <i class="fas fa-sort" onclick="SortName()"></i></th>
                                    <th scope="col">Email Nhân Viên <i class="fas fa-sort" onclick="SortName()"></i></th>
                                    <th scope="col">Ngày Tạo</th>
                                    <th scope="col">Giờ Tạo</th>
                                    <th scope="col">Lựa Chọn</th>
                                </tr>
                            </thead>
                            <tbody id="BodyData">
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-8"></div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                            <p style="text-align:right;">Trang : <b id="PageItem" style="color:red;"></b>/<b id="ItemInPage" style="color:black;"></b></p>
                        </div>
                    </div>
                    <div class="row" style="clear: both;">
                        <div id="pagination" class="pagination"></div>
                    </div>
                </div>
            </div><!-- End Left side columns -->
            <!-- Right side columns -->


        </div><!-- End Right side columns -->
    </section>

    <!-- Modal loading -->
    <div class="modal" tabindex="-1" style="background-color: #000000a6;" id="Modal_Loading">
        <div class="modal-dialog">
            <div class="modal-content" style="background:none; border:none;">
                <div class="modal-body">
                    <div class="row" style="margin-top:200px;">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <div class="spinner-grow text-primary" role="status">
                                <span class="visually-hidden"></span>
                            </div>
                            <div class="spinner-grow text-secondary" role="status">
                                <span class="visually-hidden"></span>
                            </div>
                            <div class="spinner-grow text-success" role="status">
                                <span class="visually-hidden"></span>
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main><!-- End #main -->
@section Scripts{
    <script src="~/lib/MomentDateJS/moment.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/jquery.twbsPagination.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/Accounts/GetAllAccountJS.js" asp-append-version="true"></script>
}

