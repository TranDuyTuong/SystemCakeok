
@{
    ViewData["Title"] = "Thêm Mới Quyền";
    Layout = "~/Views/Shared/Page_Home.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Thêm Mới</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang Chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="PageRole" asp-controller="Roles">Danh Sách Quyền Hệ Thống</a></li>
                <li class="breadcrumb-item active">Thêm Mới Quyền Hệ Thống</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">
                    <p>
                        <a asp-action="CreateRole" asp-controller="Roles" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Làm Mới">
                            <i class="fas fa-sync-alt"></i>
                        </a>
                    </p>
                </div>
            </div><!-- End Left side columns -->
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        <label class="form-label">Tên Quyền</label>
                        <input type="text" class="form-control" placeholder="Nhập vào tên Quyền ...." id="TxtNameRole" />
                        <br />
                        <label class="form-label">Ký Hiệu Quyền</label>
                        <input type="text" class="form-control" placeholder="Nhập vào ký hiệu tên Quyền ...." id="TxtSymbol" />
                        <p id="ErrorSymbol" class="form-text" style="color:red;"></p>
                        <br />
                        <label class="form-label">Ghi Chú</label>
                        <textarea class="form-control" id="TxtNote"></textarea>
                        <p id="ErrorNote" class="form-text" style="color:red;"></p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">*</label>
                        <p id="ErrorNameRole" class="form-text" style="color:red;"></p>
                        <br />
                    </div>
                    <hr style="margin: 10px 10px;" />
                    <p style="text-align: right">
                        <button style="width: auto; margin: 10px 10px;" class="btn btn-primary" id="Btn_Create"><i class="fas fa-save"></i> Thêm Mới</button>
                    </p>
                </div>
                <p>Lưu Ý: Thêm mới quyền chỉ có tài khoản supper Admin mới có thể thực hiện chức năng này</p>
            </div>


        </div><!-- End Right side columns -->
    </section>
</main><!-- End #main -->

<!-- Modal loading create Music -->
<div class="modal" tabindex="-1" style="background-color: #000000a6;" id="Modal_Loading">
    <div class="modal-dialog">
        <div class="modal-content" style="background:none; border:none;">
            <div class="modal-body">
                <div class="row" style="margin-top:200px;">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <div class="spinner-grow text-primary" role="status">
                            <span class="visually-hidden"></span>
                        </div>
                        <div class="spinner-grow text-secondary" role="status">
                            <span class="visually-hidden"></span>
                        </div>
                        <div class="spinner-grow text-success" role="status">
                            <span class="visually-hidden"></span>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/assets/js/Role/CreateRoleJS.js" asp-append-version="true"></script>
}

