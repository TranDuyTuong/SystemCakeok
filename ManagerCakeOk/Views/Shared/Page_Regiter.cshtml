<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] Tạo Mới Tài Khoản Nhân Viên</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/toastr.min.css">

</head>

<body>

    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-12 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="d-flex justify-content-center py-4">
                                <a href="index.html" class="logo d-flex align-items-center w-auto">
                                    <img src="assets/img/logo.png" alt="">
                                    <span class="d-none d-lg-block">CakeOk</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Tạo Mới Tài Khoản</h5>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 row g-3 needs-validation">
                                            <div class="mb-3">
                                                <label class="form-label">Họ & Tên</label>
                                                <input type="text" class="form-control" placeholder="Nhập vào tên nhân viên ..." id="Txt_Name">
                                                <div class="form-text" style="color: red;" id="ErrorName"></div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Ngày Sinh</label>
                                                <input type="date" class="form-control" id="Txt_Birthday" />
                                                <div class="form-text" style="color: red;" id="ErrorBirthday"></div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Số Điện Thoại</label>
                                                <input type="number" class="form-control" id="Txt_Phone" />
                                                <div class="form-text" style="color: red;" id="ErrorPhone"></div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Địa Chỉ</label>
                                                <textarea class="form-control" id="Txt_address"></textarea>
                                                <div class="form-text" style="color: red;" id="ErrorAddress"></div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Nhân Viên & Khách Hàng</label>
                                                <select class="form-select" id="SelectStaffCustomer">
                                                    <option selected value="0">Vui Lòng Chọn ...</option>
                                                    <option value="1">Nhân Viên</option>
                                                    <option value="2">Khách Hàng</option>
                                                </select>
                                                <div class="form-text" style="color: red;" id="ErrorStaffCustomer"></div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Giới Tính</label>
                                                <select class="form-select" id="SelectGender">
                                                    <option selected value="0">Vui Lòng Chọn ...</option>
                                                    <option value="1">Nam</option>
                                                    <option value="2">Nữ</option>
                                                </select>
                                                <div class="form-text" style="color: red;" id="ErrorGender"></div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Nhân Viên & Đầu Bếp</label>
                                                <select class="form-select" id="SelectStaffChef">
                                                    <option selected value="0">Vui Lòng Chọn ...</option>
                                                    <option value="1">Nhân Viên</option>
                                                    <option value="2">Đầu Bếp</option>
                                                </select>
                                                <div class="form-text" style="color: red;" id="ErrorStaffChef"></div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="exampleInputPassword1" class="form-label">Chọn Tỉnh / Thành Phố</label>
                                                <select class="form-select" id="SelectCity">
                                                    <option selected value="0">Vui Lòng Chọn ...</option>
                                                    <option value="1">One</option>
                                                    <option value="2">Two</option>
                                                    <option value="3">Three</option>
                                                </select>
                                                <div class="form-text" style="color: red;" id="ErrorCity"></div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="exampleInputPassword1" class="form-label">Chọn Quận / Huyện</label>
                                                <select class="form-select" id="SelectDistrict">
                                                    <option selected value="0">Vui Lòng Chọn ...</option>
                                                    <option value="1">One</option>
                                                    <option value="2">Two</option>
                                                    <option value="3">Three</option>
                                                </select>
                                                <div class="form-text" style="color: red;" id="ErrorDistrict"></div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="exampleInputPassword1" class="form-label">Tình Trạng Hôn Nhân</label>
                                                <select class="form-select" id="SelectMarrige">
                                                    <option selected value="0">Vui Lòng Chọn ...</option>
                                                    <option value="1">One</option>
                                                    <option value="2">Two</option>
                                                    <option value="3">Three</option>
                                                </select>
                                                <div class="form-text" style="color: red;" id="ErrorDMarriage"></div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Email</label>
                                                <input type="email" class="form-control" placeholder="Nhập vào Email ..." id="TxtEmail" />
                                                <div class="form-text" style="color: red;" id="ErrorEmail"></div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Mật Khẩu</label>
                                                <input type="password" class="form-control" placeholder="Nhập vào mật khẩu ..." id="TxtPassWord" />
                                                <div class="form-text" style="color: red;" id="ErrorPassword"></div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Nhắc Lại Mật Khẩu</label>
                                                <input type="password" class="form-control" placeholder="Nhắc lại mật khẩu ..." id="TxtAgainPassword" />
                                                <div class="form-text" style="color: red;" id="ErrorAgainPassword"></div>
                                            </div>

                                            <button type="submit" class="btn btn-primary" id="btn_ConfirmCreate">
                                                Xác Nhận
                                            </button>

                                        </div>
                                    </div>


                                </div>
                            </div>

                            <div class="credits">
                                Designed by Duy Tường
                            </div>

                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main><!-- End #main -->
    <!--Modal Upload Image and confim-->
    <div class="modal" tabindex="-1" id="M_UploadFileConfim" style="background-color: #000000a6;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác Nhận Cuối</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="Btn_Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Thêm Hình Đại Diện</label>
                        <input class="form-control" type="file" id="formFile">
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="ViewAvata">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Tạo Mới</button>
                </div>
            </div>
        </div>
    </div>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.min.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/js/JQuery3.6.3.js"></script>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    <script src="~/assets/js//LoginAndRegiter/Regiter.js"></script>
    <script src="~/assets/js/toastr.min.js"></script>

</body>

</html>